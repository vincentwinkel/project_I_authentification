<!DOCTYPE html>
<html>
	<head>
		<title>SAuth | Inscription</title>
		<%= settings.stylesheet; %>
<% if (form_errors.size == 0) %>
		<script type="text/javascript" language="javascript">
			window.onload=function(){document.getElementById("name").focus();};
		</script>
<% end %>
	</head>
	<body>
		<center>
			<div id="bann">
				<div id="bann_content">
					<span id="logo">vincentbook</span>
				</div>
			</div>
			<h1>Inscription</h1>
			Service d'authentification
			<div class="wrapper">
				<form action="/users" method="post">
					<table border="0">
						<tr>
							<td><label for="login">Pseudonyme : </label></td>
							<td>
								<input<% if (!is_empty(form_errors[:login])) then %> class="error"<% end %> type="text" id="login" name="login" size="30" value="<%= form_values[:login]; %>" />
								<% if (!is_empty(form_errors[:login])) then %><span class="msg_error"><%= form_errors[:login]; %></span><% end %>
							</td>
						</tr>
						<tr>
							<td><label for="password">Mot de passe : </label></td>
							<td>
								<input<% if (!is_empty(form_errors[:password])) then %> class="error"<% end %> type="password" id="password" name="password" size="30" />
								<% if (!is_empty(form_errors[:password])) then %><span class="msg_error"><%= form_errors[:password]; %></span><% end %>
							</td>
						</tr>
						<tr>
							<td><label for="password">Confirmation<br />mot de passe : </label></td>
							<td>
								<input<% if (!is_empty(form_errors[:password_confirmation])) then %> class="error"<% end %> type="password" id="password_confirmation" name="password_confirmation" size="30" />
								<% if (!is_empty(form_errors[:password_confirmation])) then %><span class="msg_error"><%= form_errors[:password_confirmation]; %></span><% end %>
							</td>
						</tr>
						<tr><td></td><td><input type="submit" name="commit" value="Valider" /></td></tr>
					</table>
				</form>
				<br />
				Ou bien <a href="/session/new">se connecter</a>
			</div>
		</center>
	</body>
</html>
